@model EdgarAparicio.PastesCatalina.Business.Entity.Comentarios

<form asp-action="Index" method="post" class="form-horizontal" role="form">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Nombre" class="col-md-2 control-laber"></label>
        <div class="col-md-5">
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-laber"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Mensaje" class="col-md-2 control-laber"></label>
        <div class="col-md-5">
            <input asp-for="Mensaje" class="form-control" />
            <span asp-validation-for="Mensaje" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Contacto" class="col-md-2 control-laber"></label>
        <div class="col-md-5">
            <input type="checkbox" asp-for="Contacto" />
        </div>
    </div>

    <div class="form-group">
        <div class="col.md-ofoset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Enviar Comentarios" />
        </div>

    </div>
</form>
